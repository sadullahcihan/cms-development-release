datasource mysql {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "mysql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id               Int       @id @default(autoincrement())
  name             String    @default("")
  email            String    @unique @default("")
  password         String
  role             String?
  createdAt        DateTime? @default(now())
  from_Client_user Client[]  @relation("Client_user")
}

model Mall {
  id      Int     @id @default(autoincrement())
  name    String  @default("")
  city    String  @default("")
  address String  @default("")
  stores  Store[] @relation("Store_mall")
}

model Store {
  id       Int       @id @default(autoincrement())
  name     String    @default("")
  floor    Int
  mall     Mall?     @relation("Store_mall", fields: [mallId], references: [id])
  mallId   Int?      @map("mall")
  client   Client?   @relation("Store_client", fields: [clientId], references: [id])
  clientId Int?      @map("client")
  payments Payment[] @relation("Payment_store")

  @@index([mallId])
  @@index([clientId])
}

model Client {
  id          Int     @id @default(autoincrement())
  user        User?   @relation("Client_user", fields: [userId], references: [id])
  userId      Int?    @map("user")
  name        String  @default("")
  phoneNumber String  @default("")
  stores      Store[] @relation("Store_client")

  @@index([userId])
}

model Payment {
  id       Int      @id @default(autoincrement())
  store    Store?   @relation("Payment_store", fields: [storeId], references: [id])
  storeId  Int?     @map("store")
  amount   Float
  currency String
  date     DateTime @default(now())

  @@index([storeId])
}
